<div class="text-center py-4 bg-gray-200">
    <h1 class="text-2xl font-bold">Add User Detail</h1>
</div>

<form class="px-6 py-4" asp-controller="Profile" asp-action="Save" method="post" enctype="multipart/form-data">

    <!-- First Name -->
    <div class="mb-4">
        <label asp-for="FirstName" class="block text-gray-700 font-bold mb-2">First Name</label>
        <input type="text" asp-for="FirstName" class="form-input w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring-blue-500">
    </div>

    <!-- Last Name -->
    <div class="mb-4">
        <label asp-for="LastName" class="block text-gray-700 font-bold mb-2">Last Name</label>
        <input type="text" asp-for="LastName" class="form-input w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring-blue-500">
    </div>

   

    <!-- Biography -->
    <div class="mb-4">
        <label asp-for="Biography" class="block text-gray-700 font-bold mb-2">Biography</label>
        <textarea asp-for="Biography" class="form-textarea w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring-blue-500" rows="4"></textarea>
    </div>

    <!-- Gender -->
    <div class="mb-4">
        <label class="block text-gray-700 font-bold mb-2">Gender</label>
        <div class="flex items-center space-x-4">
            <label asp-for="Gender" class="flex items-center">
                <input type="radio" asp-for="Gender" value="true" class="form-radio">
                <span class="ml-2">Male</span>
            </label>
            <label asp-for="Gender" class="flex items-center">
                <input type="radio" asp-for="Gender" value="false" class="form-radio">
                <span class="ml-2">Female</span>
            </label>
        </div>
    </div>


    <!-- Birth Date -->
    <div class="mb-4">
        <label asp-for="BirthDate" class="block text-gray-700 font-bold mb-2">Birth Date</label>
        <input type="date" asp-for="BirthDate" class="form-input w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring-blue-500">
    </div>

    <!-- Social Links -->
    <div class="mb-4">
        <label asp-for="Facebook" class="block text-gray-700 font-bold mb-2">Facebook</label>
        <input type="text" asp-for="Facebook" class="form-input w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring-blue-500">
    </div>

    <div class="mb-4">
        <label asp-for="Twitter" class="block text-gray-700 font-bold mb-2">Twitter</label>
        <input type="text" asp-for="Twitter" class="form-input w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring-blue-500">
    </div>

    <div class="mb-4">
        <label asp-for="Instagram" class="block text-gray-700 font-bold mb-2">Instagram</label>
        <input type="text" asp-for="Instagram" class="form-input w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring-blue-500">
    </div>

    <!-- Profile Picture URL -->
    <div class="mb-4">
        <label asp-for="ProfilePicture" class="block text-gray-700 font-bold mb-2">Profile Picture</label>
        <input type="file" asp-for="ProfilePicture" class="form-input w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring-blue-500">
    </div>

    <!-- Submit Button -->
    <div class="flex justify-end">
        <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">Save</button>
    </div>

</form>