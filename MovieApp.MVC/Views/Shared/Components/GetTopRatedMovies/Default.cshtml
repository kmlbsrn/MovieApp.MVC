@model MovieListModel<MovieModel>

<style>
    /* Slick Slider */
    .slick-slide {
        position: relative;
        height: 400px;
        border-radius: 8px;
        overflow: hidden;
    }

        .slick-slide .slide-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .slick-slide:hover .slide-image {
            transform: scale(1.05);
        }

    .film-info {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        padding: 20px;
        box-sizing: border-box;
        background-color: rgba(0, 0, 0, 0.7);
        color: white;
        transition: transform 0.3s ease;
        transform: translateY(100%);
    }

    .slick-slide:hover .film-info {
        transform: translateY(0);
    }

    .film-info .film-title {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .film-info .film-description,
    .film-info .imdb-score {
        font-size: 1rem;
        margin-bottom: 5px;
    }

    .imdb-score {
        display: flex;
        align-items: center;
    }

        .imdb-score .icon {
            margin-right: 5px;
        }

    .more-info {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.7);
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .more-info:hover {
            background-color: rgba(0, 0, 0, 0.9);
        }

    .more-info-text {
        font-size: 1.2rem;
        color: #fff;
    }

    /* Carousel Title */
    .carousel-title {
        font-size: 2rem;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
    }
</style>

<div class="container mx-auto py-8 max-w-4xl">
    <h1 class="carousel-title text-purple-700">En Çok Oylanan Filmler</h1>
    <div class="slick-carousel">
        @foreach (var movie in Model.Results)
        {
            <div class="slick-slide relative">
                <img class="slide-image" src="https://image.tmdb.org/t/p/original/@movie.BackdropPath" alt="@movie.Title">
                <div class="film-info">
                    <div class="film-title">@movie.OriginalTitle</div>
                    <div class="film-description">@movie.Overview</div>
                    <div class="imdb-score">
                        <span class="icon"><i class="fab fa-imdb fa-2x"></i></span>
                        <span>Rate: @movie.VoteCount</span>
                    </div>
                </div>
            </div>
        }
        <div class="slick-slide relative">
            <div class="more-info">
                <a asp-controller="Movie" asp-action="getTopRatedMovieList">
                    <div class="more-info-text">Daha Fazlası için Tıklayın</div>
                </a>
            </div>
        </div>
    </div>
</div>
