@model RegisterViewModel
<div class="w-full h-100">

    <h1 class="text-xl md:text-2xl font-bold leading-tight mt-12">Create an Account</h1>


    <form class="mt-6" asp-controller="Auth" asp-action="Register"  method="POST">
        <div>
            <label asp-for="Email" class="block text-gray-700"></label>
            <input type="email" asp-for="Email" placeholder="Enter Email Address" class="w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500 focus:bg-white focus:outline-none" autofocus autocomplete required>
        </div>

        <div>
            <label asp-for="UserName" class="block text-gray-700"></label>
            <input type="text" asp-for="UserName" placeholder="Enter UserName" class="w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500 focus:bg-white focus:outline-none" autofocus autocomplete required>
        </div>

        <div class="mt-4">
            <label asp-for="Password" class="block text-gray-700"></label>
            <input type="password" asp-for="Password" placeholder="Enter Password" minlength="6" class="w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500
            focus:bg-white focus:outline-none" required>
        </div>

        <div class="mt-4">
            <label asp-for="ConfirmPassword" class="block text-gray-700"></label>
            <input type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" minlength="6" class="w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500
            focus:bg-white focus:outline-none" required>
        </div>

        <div asp-validation-summary="All" class="text-red-500"></div>

        <button type="submit" class="w-full block bg-indigo-500 hover:bg-indigo-400 focus:bg-indigo-400 text-white font-semibold rounded-lg
          px-4 py-3 mt-6">
            Register
        </button>
    </form>

    <hr class="my-6 border-gray-300 w-full">

    <!-- Back to Login Button -->
    <a id="btnLogin" href="#" class="mt-8 block text-center text-gray-500 hover:text-gray-900 font-semibold">
        Back to Login
    </a>

    <!-- Back to Home Button -->
    <a href="/" class="mt-4 block text-center text-gray-500 hover:text-gray-900 font-semibold">
        Back to Home
    </a>

</div>